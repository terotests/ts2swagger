{
  "name": "ts2swagger",
  "version": "0.0.28",
  "description": "Convert TypeScript classes into Swagger docs and Express API",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "ts2swagger": "dist/src/cli.js"
  },
  "scripts": {
    "build:frontend": "browserify ./dist/src/frontend/index.js -o ./public/index.js",
    "compile": "find ./dist/ -name \"*.d.ts\" -delete && tsc",
    "tsc": "tsc",
    "build": "npm run compile && node dist/src/tssimplec src/testinput.ts && npm run build:frontend && cp src/swagger/* dist/swagger/ && node dist/src/backend/index",
    "test": "npm run tsc && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terotests/ts2swagger.git"
  },
  "keywords": [],
  "author": "Tero Tolonen",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.17.13",
    "axios": "^0.18.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "express-http-context": "^1.2.0",
    "jest": "^24.9.0",
    "js-yaml": "^3.13.1",
    "json2yaml": "^1.1.0",
    "openapi3-ts": "^1.3.0",
    "robowr": "^2.0.8",
    "swagger-ui-express": "^4.0.1",
    "ts-morph": "^6.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.[j]s?(x)",
      "**/?(*.)+(spec|test).[j]s?(x)"
    ],
    "collectCoverage": true
  }
}
